{
    "name": "Checkmate",
    "version": "1.0",
    "description": "test",
    "permissions": ["tabs", "webNavigation"],
    "background": {
        "scripts": ["util.js", "background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "32": "icon-32.png"
        }
    },
    "icons": {
        "32": "icon-32.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "run_at": "document_end",
            "js": ["util.js", "content.js"]
        },
        {
            "matches": ["*://*/*"],
            "run_at": "document_end",
            "js": ["util.js", "all_frames.js"],
            "match_about_blank": true,
            "all_frames": true
        }
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "manifest_version": 2
}